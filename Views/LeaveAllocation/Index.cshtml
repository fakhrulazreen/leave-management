@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Leave Allocation";
    ViewData["nav-active"] = "active";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<h1>Leave Allocation</h1>

<table id="tblData" class="table table-hover table-striped dataTable" role="grid" width="100%">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                        <i class="fas fa-user-plus" aria-hidden="true"></i>
                        Allocate to Employees
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}